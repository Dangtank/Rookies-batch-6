@model PersonModel

@{
    ViewData["Title"] = "Member's Details";
    var index = ViewData["index"] != null ? (int)ViewData["index"] : 0;
}
<h1 class="display-4 mb-5">@ViewData["Title"]</h1>
<div class="text-left mt-5 mb-3">
    <a class="btn btn-primary" asp-controller="Rookies" asp-action="Index"> Back to list</a>
</div>
<div class="row">
    <div class="col-8">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <label class="form-control" >@Model.FirstName </label>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Email address</label>
            <label class="form-control" >@Model.LastName </label>
        </div>
        <div class="form-group">
            <label asp-for="Gender" ></label>
            <label class="form-control" >@Model.Gender </label>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"> Date Of Birth</label>
            <label class="form-control" >@Model.DateOfBirth.ToString("dd/MM/yyyy")</label>
        </div>
        <button type="button" class="btn btn-danger" role="button" href="#" data-toggle="modal" data-target="#deleteComfirmationModal">
            Delete
        </button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteComfirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="Rookies" asp-action="DeleteAndRedirectToResultPage" asp-route-index="@index">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Comfirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Comfirm</button>
                </div>
            </form>
        </div>
    </div>
</div>