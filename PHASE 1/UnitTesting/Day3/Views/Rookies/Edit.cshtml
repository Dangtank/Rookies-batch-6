@model PersonModelUpdate

@{
    ViewData["Title"] = "Edit Member";
    var index = ViewData["index"] != null ? (int)ViewData["index"] :0; 
}
<h1 class="display-4 mb-5">@ViewData["Title"]</h1>
<div class="row">
    <form method="post" asp-controller="Rookies" asp-action="Update" asp-route-index="@index" class="col-8">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter Member's First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Member's LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthPlace">Birth Place</label>
            <input asp-for="BirthPlace" type="text" class="form-control" />
            <span asp-validation-for="BirthPlace" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn btn-primary" role="button" asp-controller="Rookies" asp-action="Index">Cancel</a>
    </form>

</div>
